<div class="badge-card my-3 <%= 'claimable' if owned %>">
  <em class="badge-name"><%= badge.name %></em>

  <div class="badge-contents">
    <div class="badge-details">
      <div class="mb-0"><%= badge.description %></div>
    </div>
    <div class="badge-status">
      <% if owned %>
        <i class="fa-solid fa-key"></i>
      <% else %>
        <i class="fa-solid fa-lock"></i>
      <% end %>
    </div>
  </div>

  <% if owned %>
    <button class="launch-modal"></button>
  <% end %>
  <div class="custom-modal d-none">
    <div class="modal-container">
      <div class="modal-badge">
        <i class="fa-solid fa-certificate modal-badge-icon"></i>
      </div>
      <button class="get-badge btn btn-primary">Claim my badge !</button>
    </div>
  </div>
</div>
