{
 "name": "PactHabit",
 "description": "Join PactHabit: Commit to your goals, challenge yourself, and track your progress as you turn ambitions into habits with a community that keeps you accountable.",
 "background_color": "#242933",
 "theme_color": "#242933",
 "display": "standalone",
 "start_url": "/",
 "icons": [
  <% files = Dir.entries(Rails.root.join("app/assets/images/icons/")).select {|f| !File.directory? f} %>
    <% files.each_with_index do |file, index| %>
      <% match = file.match(/.+-(?<size>\d{2,3}x\d{2,3}).png/) %>
      {
        "src": "<%= image_path "icons/#{file}" %>",
        "sizes": "<%= match && match[:size] %>",
        "type": "image/png"
      }<%= "," unless (files.size - 1) == index %>
    <% end %>
  ]
}
